- content_for :description do
  .mobile-hide= t("terms_page.title")

- [:meta_description, :title].each do |n|
  - content_for n do
    = t("terms_page.title")

- content_for :back_link do
  = link_to t("help_menu.back_link"), root_path, class: 'back_link'

- content_for :body do
  .main_content
    .about_sidebar
      = render partial: 'home/help_menu'
    .cabinet_content
      .about_content
        .about_article= raw t("terms_page.text", root_link:(link_to 'https:// interpreters.travel', root_path), privacy_policy_link: link_to('https://interpreters.travel/help/privacy_policy', privacy_policy_path), about_link: link_to('https://interpreters.travel/help/about', about_path), help_interpreter_link: link_to('https:// interpreters.travel/help/help_interpreter', help_interpreter_path))