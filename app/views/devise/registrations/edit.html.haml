- content_for :description do
  Edit #{resource_name.to_s.humanize}
- content_for :body do
  .green_line
  .main_content
    .info_wrapper
      .order_form
        = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => 'form-vertical' }) do |f|
          = f.error_notification
          = display_base_errors resource
          = f.input :name, input_html: {disabled: true}
          = f.input :surname, input_html: {disabled: true}
          = f.input :email, required: true
          = f.input :password, autocomplete: "off", placeholder: "leave this field blank to keep the old password", required: false
          = f.input :password_confirmation, required: false
          = f.input :current_password, required: true
          %br
          #client-balance-container
          %br
          = f.button :submit, 'Update', class: 'sub', style: 'display: inline; width: 310px;'
      = link_to "Back", :back
  #client-balance-popup