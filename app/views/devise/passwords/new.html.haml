- content_for :description do
  = t("new_password_page.title")

- content_for :body do
  .green_line
  .main_content
    .info_wrapper
      .order_form
        = form_for(resource, :as => resource_name, :url => user_password_path, :html => { :method => :post }) do |f|
          %div{style: "margin-bottom: 2rem"}= devise_error_messages!

          - if params[:password_change_required]
            %div{style: "margin-bottom: 1rem; font-size: 1.1rem; line-height: 1.3rem; color: red"}
              = t("new_password_page.password_change_required")

          = f.email_field :email, :autofocus => true, placeholder: t("new_password_page.form.email"), value: params[:email], style: "color: black;"

          = f.submit t("new_password_page.form.submit"), class: 'sub', style: 'display: inline;'