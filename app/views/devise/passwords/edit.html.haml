%h2 Change your password
- content_for :body do
  .green_line
  .main_content
    .info_wrapper
      .order_form
        = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put , class: "form-vertical"}) do |f|
          = devise_error_messages!
          = f.hidden_field :reset_password_token
          = f.error_notification
          = display_base_errors resource
          = f.input :password, autofocus: true
          = f.input :password_confirmation
          = f.button :submit, "Change my password", class: 'sub', style: 'display: inline; width: 310px;'
= render "devise/shared/links"